<% title course_title(@course) %>

<h2>Contenidos</h2>
<ul>
  <% @course["modulo"].each do |mod| %>
    <li>
      <b><%= mod["titulo"] %></b>
      <div>
        <%= mod["descripcion"] %>
      </div>
      <div>
        <%= link_to "(link)", mod["url"] %>
      </div>
    </li>
  <% end %>
</ul>

<h2>Lista de estudiantes</h2>

<ul>  
  <% @students.sort_by { |s| s["nombre"] }.each do |student| %>
    <li>
      <%= student["codigo"] %> - <%= student["nombre"] %>
    </li>
  <% end %>
</ul>

<h2>Programaci√≥n semestre <%= current_semester %></h2>

<ul>
  <% @schedule.each do |event| %>
    <li>
      <b><%= event["tipo"].titleize %>:</b> (<%= event["porcentaje"] %>%) <%= l Date.parse(event["fecha"]) , :format => :long %> (<%= date_distance(Date.parse(event["fecha"])) %>)
    </li>
  <% end %>
</ul>
